@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", null, new { @class = "btn btn-primary" })
<table id="movies" class="table table-hover">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document)
            .ready(function() {
                var table = $("#movies")
                    .DataTable({
                        ajax: {
                            url: "/api/movies",
                            dataSrc: ""
                        },
                        columns: [
                            {
                                data: "name",
                                render: function(data, type, row) {
                                    return "<a href='/movies/edit/" + row.id + "'>" + row.name + "</a>";
                                }
                            },
                            {
                                data: "genre.name"
                            },
                            {
                                data: "id",
                                render: function(data) {
                                    return "<button class='btn btn-link js-delete' data-movie-id='" +
                                        data +
                                        "'>Delete</button>";
                                }
                            }
                        ]
                    });
                $("#movies")
                    .on("click",
                        ".js-delete",
                        function() {
                            var btn = $(this);
                            var id = btn.attr("data-movie-id");
                            bootbox.confirm("Are you sure you want to delete this movie?",
                                function(result) {
                                    if (result) {
                                        $.ajax({
                                            url: "/api/movies/" + id,
                                            method: "DELETE",
                                            success: function() {
                                                table.row(btn.parents("tr")).remove().draw();
                                            }
                                        });
                                    }
                                });
                        });
            });
    </script>
}
