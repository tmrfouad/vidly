@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <text>There is no customers yet.</text>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Customer</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name, "CustomerDetails", new {Id = customer.Id})</td>
            </tr>
        }
        </tbody>
    </table>
}